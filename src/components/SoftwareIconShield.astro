---
interface Props {
    name: string;
    color: string;
    slug: string;
    dark_fg?: boolean;
}
const { name, color, slug, dark_fg=false } = Astro.props;

const fg_color = dark_fg ? "282828" : "ddc7a1";
const src = "https://cdn.simpleicons.org/" + slug + "/" + "ddc7a1";
const size = 16;

const colorStyle = "background-color: color-mix(in srgb, #" + color + " 65%, var(--bg-darker)";
---

<div class="container" style={colorStyle}>
<!-- <div class="container"> -->
    <div class="img-container">
    <!-- <div class="img-container" style={colorStyle}> -->
        <img height={size} width={size} src={src} />
    </div>
    <p style={"color: #" + fg_color + ";"}> {name} </p>
    <!-- <p> {name} </p> -->
</div>

<style>
    .container {
        display: flex;
        align-items: center;
        overflow: hidden;
        border-radius: 5px;
        background-color: var(--bg4);
        box-shadow: rgba(0, 0, 0, 0.25) 0px 5px 10px;
    }
    .img-container {
        padding: 0 7px;
        border-radius: 5px;
        display: flex;
        align-self: stretch;
        align-items: center;
    }
    .img-container img {
        border-radius: 5px;
        margin-right: -8px;
        filter: drop-shadow(1px 3px 5px rgba(0, 0, 0, 0.35)); /* x y spread */
    }
    p {
        margin: 2px 8px;
        filter: drop-shadow(1px 3px 5px rgba(0, 0, 0, 0.35));
    }
</style>
