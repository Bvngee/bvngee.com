---
const { title, href, favicon } = Astro.props;
---

<a href={href}>
    <div class="box">
        <img alt={title} title={title} height="16" width="16" src={favicon} />
        <p>{title}</p>
    </div>
</a>

<style>
    a {
        text-decoration: none;
        display: flex;
    }
    .box {
        display: flex;
        padding: 4px 3px 4px 12px;
        background-color: var(--bg4);
        border-radius: 5px;
    }
    img {
        align-self: center;
		box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 10px;
    }
    p {
        margin: 0px 8px;
    }
</style>